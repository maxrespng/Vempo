      <button data-action="click->load-shapes#playMusic" class="white-btn"><i class="fa-solid fa-play"></i></button>

    <div class="screenshot" data-controller="screenshot" data-screenshot-target="container">
    <%# <button class="btn btn-primary btn-lg" data-action="click->screenshot#screenshot">Screenshot</button> %>
      <%= simple_form_for(@project, data: { screenshot_target: "form", action: "submit->screenshot#screenshot" }) do |f| %>
        <%= f.input :screenshot, label: false, input_html: { data: { screenshot_target: "photo" }, style: "display:none;"   } %>
        <%= f.submit "Screenshot", class: "white-btn", data: { screenshot_target: "input" }  %>
      <% end %>
