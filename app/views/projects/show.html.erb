      <%= f.input :start_y, input_html: { data: {new_shape_target: "input2"} } %>
      <%= f.input :width, input_html: { data: {new_shape_target: "input3"} } %>
      <%= f.input :height, input_html: { data: {new_shape_target: "input4"} } %>
