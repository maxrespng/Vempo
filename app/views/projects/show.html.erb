    <%# <%end%>

    </div>
      <button class="bottom-d" data-invert-button-target="button" data-action="click->new-shape#toggle" data-new-shape-target="bottomD">
        <i class="fa-solid fa-arrow-right" data-new-shape-target="arrow"></i>
      </button>
